# .env.example - Copy this to .env and fill in your values

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/kurawal_init"

# JWT Secret (generate a secure random string, min 32 characters)
# You can generate one with: openssl rand -base64 32
JWT_SECRET="your-super-secret-jwt-key-minimum-32-characters-long"

# Server
PORT=3000
NODE_ENV=development

# Puppeteer Browser Configuration
# Optional: Path to Chrome/Chromium executable
# Windows default: C:/Program Files/Google/Chrome/Application/chrome.exe
# Linux default: /usr/bin/chromium
PUPPETEER_EXECUTABLE_PATH=""

# Run browser in headless mode (true/false)
HEADLESS=true
